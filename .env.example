###############################################################################
# WATER Framework — Environment Configuration
# Copy to .env and customise for your local setup.
# All variables have sensible defaults — this file is optional.
###############################################################################

# ── Logging ──────────────────────────────────────────────────────────────────
WATER_LOG_LEVEL=INFO
# WATER_LOG_FORMAT=json          # Uncomment for structured JSON logs

# ── Orthanc DICOM Server ────────────────────────────────────────────────────
ORTHANC_HOST=localhost
ORTHANC_HTTP_PORT=8042
ORTHANC_DICOM_PORT=4242
# ORTHANC_USERNAME=              # Leave empty if auth is disabled
# ORTHANC_PASSWORD=

# ── TCIA (The Cancer Imaging Archive) ────────────────────────────────────────
TCIA_COLLECTION=LIDC-IDRI
TCIA_MAX_SERIES=5
TCIA_BATCH_SIZE=1
TCIA_DOWNLOAD_DIR=data/tcia_downloads
